{
  "name": "spaceonfire/common",
  "type": "library",
  "description": "",
  "keywords": [
    "spaceonfire",
    "common"
  ],
  "homepage": "https://github.com/spaceonfire/common",
  "license": "MIT",
  "authors": [
    {
      "name": "Constantine Karnaukhov",
      "email": "genteelknight@gmail.com",
      "homepage": "https://www.onfire.space/",
      "role": "Maintainer"
    }
  ],
  "require": {
    "php": "^7.2|^8.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12",
    "phpunit/phpunit": "^8.5|^9.5",
    "phpspec/prophecy-phpunit": "^1.1|^2.0",
    "psr/log": "^1.1",
    "roave/security-advisories": "dev-master",
    "spaceonfire/command-bus": "^1.1",
    "spaceonfire/container": "^2.4",
    "symfony/console": "^5.1",
    "symfony/stopwatch": "^5.1",
    "symplify/easy-coding-standard-prefixed": "^8.3|^9.1",
    "vlucas/phpdotenv": "^4.1|^5.2"
  },
  "suggest": {
    "vlucas/phpdotenv": "Required for env() function",
    "spaceonfire/command-bus": "Used to organize CQRS buses",
    "spaceonfire/container": "Used to organize Kernel"
  },
  "autoload": {
    "psr-4": {
      "spaceonfire\\Common\\": "src"
    },
    "files": [
      "functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "spaceonfire\\Common\\": "tests"
    }
  },
  "scripts": {
    "test": "@php -d xdebug.mode=coverage `which phpunit`",
    "codestyle": "ecs check --ansi",
    "lint": "phpstan analyze --memory-limit=512M --ansi"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
